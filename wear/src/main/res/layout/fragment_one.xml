<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.fudan.xuan.mytimemanagement.FragmentOne">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.wearable.view.CircledImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/progressBar_center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:circle_radius="100dp"
            app:circle_color="@color/black"
            app:circle_border_color="@color/white"
            app:circle_border_width="25dp"
            />

        <Button
            android:text="Working"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressBar_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:id="@+id/button_upper"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:text="Resting"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_upper"
            android:layout_alignStart="@+id/button_upper"
            android:id="@+id/button_lower"
            android:textAllCaps="false"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>

